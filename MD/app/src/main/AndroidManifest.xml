<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fimo.aidentist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIDentist">
        <activity
            android:name=".ui.navigation.camera.CameraResultActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.doctor.DoctorActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.consultation.OfflineConsultationActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.consultation.OnlineConsultationActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.doctor.DoctorProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.treatment.DailyTreatmentActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.boarding.BoardingActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.navigation.camera.CameraActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.auth.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.fimo.aidentist.ui.menu.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>